<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Video Player Section -->
    <RelativeLayout
        android:id="@+id/videoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/videoInfoSection"
        android:background="#1A1A1A">

        <!-- Back Button (Top Left) -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:tint="#FFFFFF"
            android:background="@drawable/circle_button_background"
            android:contentDescription="Back" />

        <!-- Video Title (Top) -->
        <TextView
            android:id="@+id/videoTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/backButton"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"
            android:text="Day 3 - Al-Baqarah (21-39)"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Video Player Placeholder -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Play Icon -->
            <ImageView
                android:id="@+id/playIconLarge"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_play_large"
                android:tint="#D4AF37"
                android:alpha="0.9"
                android:contentDescription="Play" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Video player would be embedded here"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:alpha="0.7" />
        </LinearLayout>

        <!-- Video Duration (Bottom Right) -->
        <TextView
            android:id="@+id/videoDurationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:background="@drawable/duration_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="15:30"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Video Info Section (Bottom Sheet) -->
    <ScrollView
        android:id="@+id/videoInfoSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_sheet_background"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Video Title -->
            <TextView
                android:id="@+id/lessonTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signs of Allah and The Story of Adam"
                android:textColor="#1A1A1A"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Video Description -->
            <TextView
                android:id="@+id/lessonDescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Exploring the evidences of creation and humanity's noble beginning"
                android:textColor="#666666"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp" />

            <!-- Video Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_views"
                    android:tint="#999999"
                    android:contentDescription="Views" />

                <TextView
                    android:id="@+id/viewCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="1.2K views"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_time"
                    android:tint="#999999"
                    android:contentDescription="Duration" />

                <TextView
                    android:id="@+id/durationInfoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="15 min"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- About This Lesson Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="About This Lesson"
                android:textColor="#1A1A1A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Theme Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bullet_point" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Theme"
                        android:textColor="#1A1A1A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/themeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Evidence of Allah's Existence and Adam's Story"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Surah Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bullet_point" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Surah"
                        android:textColor="#1A1A1A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/surahText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Al-Baqarah (21-39) (Surah 2)"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp">

                <!-- Previous Day Button (Outlined) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/previousDayButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Previous Day"
                    android:textColor="#1A1A1A"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#DDDDDD"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp" />

                <!-- Next Day Button (Black with Gold Text) -->
                <Button
                    android:id="@+id/nextDayButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Next Day"
                    android:textColor="#D4AF37"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:backgroundTint="#1A1A1A"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>